{
    "git": {
        "commitMessage": "chore: release v${version} [skip ci]",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": false
    },
    "github": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    },
    "hooks": {
        "after:bump": "echo 'Version bumped to ${version}'"
    }
}