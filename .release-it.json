{
    "git": {
        "commitMessage": "chore: release v${version} [skip ci]",
        "tagName": "v${version}",
        "push": true,
        "requireCleanWorkingDir": false,
        "requireBranch": "master"
    },
    "github": {
        "release": false
    },
    "hooks": {
        "after:bump": "npm run changelog"
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}