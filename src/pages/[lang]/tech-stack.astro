---
import Layout from "../../layouts/Layout.astro";
import TechStackComponent from "../../components/astro/TechStack.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

export async function getStaticPaths() {
    return [{ params: { lang: "en" } }, { params: { lang: "es" } }];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<Layout title={`Portfolio | ${t("nav.tech")}`} lang={lang}>
    <section
        class="py-20 md:py-32 min-h-screen bg-gunmetal relative overflow-hidden"
    >
        {/* Background Elements */}
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-[#c08b5a]/10 via-transparent to-transparent opacity-50"
        >
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="mb-16 text-center">
                <h1
                    class="text-4xl md:text-5xl font-heading font-bold text-white mb-6"
                >
                    {t("page.techStackTitle")}
                    <span class="text-[#c08b5a]">.</span>
                </h1>
                <p
                    class="text-xl text-[#94a3b8] max-w-2xl mx-auto leading-relaxed"
                >
                    {t("page.techStackDescription")}
                </p>
            </div>

            <TechStackComponent />
        </div>
    </section>
</Layout>
