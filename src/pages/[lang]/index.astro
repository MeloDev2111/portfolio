---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/astro/Hero.astro";
import TechStack from "../../components/astro/TechStack.astro";
import { ProjectCard } from "../../components/react/ProjectCard";
import { getCollection, type CollectionEntry } from "astro:content";
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
} from "../../i18n/utils";
import { getLocalizedProjects } from "../../utils/projects";

export function getStaticPaths() {
    return [{ params: { lang: "en" } }, { params: { lang: "es" } }];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

// --- Data Fetching ---

// Type aliases to avoid parser confusion in JSX
type ProjectEntry = CollectionEntry<"projects">;
type CertEntry = CollectionEntry<"certifications">;

// Projects
const projects = await getLocalizedProjects(lang);

// Certifications
const certifications = await getCollection("certifications");

// --- Page Content ---
---

<Layout title="MeloDev Portfolio" lang={lang}>
    <Hero />

    <!-- About Section -->
    <section
        id="about"
        class="py-16 md:py-24 min-h-[50vh] flex flex-col justify-center bg-gunmetal snap-start relative overflow-hidden"
    >
        <!-- Background Elements -->
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-[#c08b5a]/5 via-transparent to-transparent opacity-50"
        >
        </div>

        <div
            class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full"
        >
            <div
                class="glass-card p-8 md:p-12 rounded-3xl relative overflow-hidden"
            >
                <!-- Noise Texture -->
                <div
                    class="absolute inset-0 bento-noise opacity-10 pointer-events-none"
                >
                </div>

                <div class="grid md:grid-cols-3 gap-12 relative z-10">
                    <!-- Column 1: Header & Bio (Span 2) -->
                    <div class="md:col-span-2 flex flex-col gap-6">
                        <div class="flex items-center gap-4 mb-2">
                            <h2
                                class="text-3xl md:text-4xl font-heading font-bold text-white tracking-tight"
                            >
                                {t("nav.about")}
                                <span class="text-[#c08b5a]">.</span>
                            </h2>
                            <div
                                class="h-px bg-white/10 flex-grow rounded-full"
                            >
                            </div>
                        </div>

                        <div
                            class="prose prose-invert prose-lg text-[#94a3b8] leading-relaxed"
                        >
                            <p set:html={t("about.p1")} />
                            <p set:html={t("about.p2")} />
                        </div>

                        <!-- Signature / decorative element -->
                        <div
                            class="mt-4 opacity-50 font-mono text-xs tracking-widest text-[#c08b5a]"
                        >
                            // ARCHITECTING_THE_FUTURE
                        </div>
                    </div>

                    <!-- Column 2: Tech DNA / Visual Sidebar -->
                    <div
                        class="md:col-span-1 border-t md:border-t-0 md:border-l border-white/10 pt-8 md:pt-0 md:pl-12 flex flex-col justify-center"
                    >
                        <h3
                            class="text-sm font-bold text-[#818d90] uppercase tracking-widest mb-6 flex items-center gap-2"
                        >
                            <span class="w-2 h-2 rounded-full bg-[#c08b5a]"
                            ></span>
                            Focus Areas
                        </h3>

                        <div class="flex flex-col gap-4">
                            <!-- Item 1 -->
                            <div
                                class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                            >
                                <div class="flex items-center gap-3 mb-1">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-[#c08b5a]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 01-2 2v4a2 2 0 012 2h14a2 2 0 012-2v-4a2 2 0 01-2-2m-2-4h.01M17 16h.01"
                                        ></path>
                                    </svg>
                                    <span class="font-bold text-gray-200"
                                        >Architecture & Backend</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 pl-8">
                                    Microservices & APIs
                                </p>
                            </div>

                            <!-- Item 2 -->
                            <div
                                class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                            >
                                <div class="flex items-center gap-3 mb-1">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-[#c08b5a]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                        ></path>
                                    </svg>
                                    <span class="font-bold text-gray-200"
                                        >Cloud & DevOps</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 pl-8">
                                    AWS & Scalability
                                </p>
                            </div>

                            <!-- Item 3 -->
                            <div
                                class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                            >
                                <div class="flex items-center gap-3 mb-1">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-[#c08b5a]"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                                        ></path>
                                    </svg>
                                    <span class="font-bold text-gray-200"
                                        >Data Science</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 pl-8">
                                    Analysis & Insights
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Certifications Section -->
    <section
        id="certifications"
        class="py-16 md:py-24 min-h-[60vh] flex flex-col justify-center bg-charcoal snap-start"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2
                class="text-3xl md:text-4xl font-heading font-bold text-light mb-12 flex items-center"
            >
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#c08b5a] to-white"
                >
                    {t("nav.certifications")}
                </span>
                <div class="h-px bg-white/10 flex-grow ml-6"></div>
            </h2>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
                {
                    certifications
                        .filter((c) => c.data.starred)
                        .sort(
                            (a, b) =>
                                new Date(b.data.date).valueOf() -
                                new Date(a.data.date).valueOf(),
                        )
                        .slice(0, 4)
                        .map((cert: CertEntry) => (
                            <a
                                href={cert.data.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex flex-col items-center justify-between p-6 rounded-2xl glass-card border border-white/5 hover:border-[#c08b5a]/40 transition-all hover:shadow-[0_0_25px_rgba(192,139,90,0.15)] hover:-translate-y-2 group relative overflow-hidden h-full gap-6"
                            >
                                {/* Noise Texture */}
                                <div class="absolute inset-0 bento-noise opacity-15 pointer-events-none" />
                                {/* Hover Gradient */}
                                <div class="absolute inset-0 bg-gradient-to-b from-[#c08b5a]/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                {/* Badge - Prominent & Centered */}
                                <div class="relative z-10 w-20 h-20 flex items-center justify-center p-3 rounded-full bg-white/5 border border-white/5 group-hover:border-[#c08b5a]/30 group-hover:bg-[#c08b5a]/10 transition-all duration-300">
                                    {cert.data.badge ? (
                                        <Image
                                            src={
                                                cert.data.badge.startsWith(
                                                    "http",
                                                )
                                                    ? cert.data.badge
                                                    : import.meta.env.BASE_URL.replace(
                                                          /\/$/,
                                                          "",
                                                      ) + cert.data.badge
                                            }
                                            alt={cert.data.name}
                                            width={80}
                                            height={80}
                                            loading="lazy"
                                            class="w-full h-full object-contain filter drop-shadow-lg group-hover:scale-110 transition-transform duration-500"
                                        />
                                    ) : (
                                        <span class="text-3xl">üèÖ</span>
                                    )}
                                </div>

                                {/* Content - Centered */}
                                <div class="flex flex-col items-center text-center relative z-10 flex-grow">
                                    <h3 class="text-lg font-heading font-bold text-gray-100 group-hover:text-[#c08b5a] transition-colors leading-tight mb-2">
                                        {cert.data.name}
                                    </h3>
                                    <p class="text-xs text-gray-400 font-bold tracking-wider mb-4 border-b border-white/5 pb-2 w-full">
                                        {cert.data.issuer}
                                    </p>
                                    <p class="text-[10px] text-gray-500 font-mono tracking-widest mt-auto">
                                        {cert.data.date}
                                    </p>
                                </div>

                                {/* Interactive Indicator */}
                                <div class="absolute bottom-0 left-0 w-full h-1 bg-[#c08b5a] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left" />
                            </a>
                        ))
                }
            </div>

            <div class="mt-10 text-center">
                <a
                    href={getRelativeLocaleUrl(lang, "certifications")}
                    class="text-[#c08b5a] hover:text-white underline underline-offset-4 transition-colors font-medium tracking-wide"
                >
                    {t("section.viewAllCerts")}
                </a>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section
        id="projects"
        class="py-16 md:py-24 min-h-[60vh] flex flex-col justify-center bg-charcoal/30 snap-start"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2
                class="text-3xl md:text-4xl font-heading font-bold text-light mb-12 flex items-center"
            >
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#c08b5a] to-white"
                >
                    {t("nav.projects")}
                </span>
                <div class="h-px bg-white/10 flex-grow ml-6"></div>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    projects
                        .filter((p) => p.data.featured)
                        .slice(0, 2)
                        .map((project) => (
                            <ProjectCard
                                client:visible
                                title={project.data.title}
                                description={project.data.description}
                                tags={project.data.tags ?? []}
                                link={project.data.link}
                                image={project.data.image}
                                featured={project.data.featured}
                                inProgress={project.data.inProgress}
                            />
                        ))
                }

                {/* View All Projects Card */}
                <a
                    href={getRelativeLocaleUrl(lang, "projects")}
                    class="group relative overflow-hidden rounded-2xl glass-card border border-white/5 hover:border-[#c08b5a]/40 transition-all duration-500 hover:shadow-[0_0_30px_rgba(192,139,90,0.15)] hover:-translate-y-1 flex flex-col items-center justify-center p-8 min-h-[300px] cursor-pointer"
                >
                    <div
                        class="absolute inset-0 bento-noise opacity-10 pointer-events-none"
                    >
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-[#c08b5a]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                    >
                    </div>

                    <div
                        class="w-16 h-16 rounded-full bg-white/5 border border-white/10 flex items-center justify-center mb-4 group-hover:scale-110 group-hover:bg-[#c08b5a]/20 group-hover:border-[#c08b5a]/30 transition-all duration-300"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-8 h-8 text-gray-400 group-hover:text-[#c08b5a] transition-colors"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </div>

                    <h3
                        class="text-xl font-heading font-bold text-white group-hover:text-[#c08b5a] transition-colors"
                    >
                        {t("section.viewAllProjects")}
                    </h3>
                    <p class="text-sm text-gray-500 mt-2 text-center max-w-xs">
                        {t("page.projectsDescription")}
                    </p>
                </a>
            </div>
        </div>
    </section>

    <!-- Tech Stack Section -->
    <section
        id="tech-stack"
        class="py-16 md:py-24 min-h-[40vh] flex flex-col justify-center bg-gunmetal snap-start"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2
                class="text-3xl md:text-4xl font-heading font-bold text-light mb-12 flex items-center"
            >
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#c08b5a] to-white"
                >
                    {t("nav.tech")}
                </span>
                <div class="h-px bg-white/10 flex-grow ml-6"></div>
            </h2>
            <TechStack compact={true} />

            <div class="mt-10 text-center">
                <a
                    href={getRelativeLocaleUrl(lang, "tech-stack")}
                    class="text-[#c08b5a] hover:text-white underline underline-offset-4 transition-colors font-medium tracking-wide"
                >
                    {t("section.viewFullTech")}
                </a>
            </div>
        </div>
    </section>
</Layout>
