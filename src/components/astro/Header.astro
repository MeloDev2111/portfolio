---
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
} from "../../i18n/utils";
import { siteConfig } from "../../site.config";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
    { href: getRelativeLocaleUrl(lang, "/#about"), label: t("nav.about") },
    {
        href: getRelativeLocaleUrl(lang, "/#certifications"),
        label: t("nav.certifications"),
    },
    {
        href: getRelativeLocaleUrl(lang, "/#projects"),
        label: t("nav.projects"),
    },
    { href: getRelativeLocaleUrl(lang, "/#tech-stack"), label: t("nav.tech") },
];

const currentPath = Astro.url.pathname;
const otherLang = lang === "en" ? "es" : "en";

// Robust switcher:
// 1. Remove base path
// 2. Replace lang part
// 3. Re-add base path
// This avoids issues where replace() might target the wrong part of the string
const base = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL.slice(0, -1)
    : import.meta.env.BASE_URL;
// Path without base (e.g. /en/projects)
const pathNoBase = currentPath.replace(base, "");
// Replace /en/ with /es/ or vice versa in the relative path
const newPathNoBase = pathNoBase.replace(`/${lang}`, `/${otherLang}`);
// Reconstruct full URL
const switchUrl = `${base}${newPathNoBase}`;
---

<header
    class="fixed top-0 w-full z-50 backdrop-blur-md bg-gunmetal/70 border-b border-white/5 shadow-sm"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <a
                href={getRelativeLocaleUrl(lang, "")}
                class="text-xl font-heading font-bold text-light tracking-tighter hover:text-gold transition-colors"
            >
                {siteConfig.alias}<span class="text-gold">.</span>
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden md:flex space-x-8 items-center">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class="text-sm font-medium text-gray-300 hover:text-gold transition-colors"
                        >
                            {item.label}
                        </a>
                    ))
                }

                <!-- Language Switcher -->
                <a
                    href={switchUrl}
                    class="px-3 py-1 rounded bg-charcoal border border-white/10 text-xs text-gray-300 hover:border-gold hover:text-gold transition-colors"
                >
                    {lang === "en" ? "ES" : "EN"}
                </a>
            </nav>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden text-gray-300 hover:text-white focus:outline-none"
                aria-label="Toggle menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-gunmetal/95 backdrop-blur-md border-b border-white/5"
    >
        <nav class="px-4 py-6 space-y-4 flex flex-col">
            {
                navItems.map((item) => (
                    <a
                        href={item.href}
                        class="text-base font-medium text-gray-300 hover:text-gold transition-colors block"
                    >
                        {item.label}
                    </a>
                ))
            }
            <div
                class="pt-4 border-t border-white/10 flex items-center justify-between"
            >
                <span class="text-gray-400 text-sm">{t("nav.language")}</span>
                <div
                    class="flex bg-charcoal rounded-lg p-1 border border-white/10"
                >
                    <a
                        href={lang === "en" ? "#" : switchUrl}
                        class={`px-3 py-1.5 rounded-md text-sm transition-all ${
                            lang === "en"
                                ? "bg-gold text-gunmetal font-bold shadow-sm cursor-default"
                                : "text-gray-400 hover:text-white"
                        }`}
                        aria-current={lang === "en" ? "page" : undefined}
                    >
                        EN
                    </a>
                    <a
                        href={lang === "es" ? "#" : switchUrl}
                        class={`px-3 py-1.5 rounded-md text-sm transition-all ${
                            lang === "es"
                                ? "bg-gold text-gunmetal font-bold shadow-sm cursor-default"
                                : "text-gray-400 hover:text-white"
                        }`}
                        aria-current={lang === "es" ? "page" : undefined}
                    >
                        ES
                    </a>
                </div>
            </div>
        </nav>
    </div>
</header>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });

        // Close menu when clicking a link
        menu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                menu.classList.add("hidden");
            });
        });
    }
</script>
