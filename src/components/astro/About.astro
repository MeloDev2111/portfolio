---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
    id="about"
    class="py-16 md:py-24 min-h-[50vh] flex flex-col justify-center bg-gunmetal snap-start relative overflow-hidden"
>
    <!-- Background Elements -->
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-[#c08b5a]/5 via-transparent to-transparent opacity-50"
    >
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
        <div
            class="glass-card p-8 md:p-12 rounded-3xl relative overflow-hidden"
        >
            <!-- Noise Texture -->
            <div
                class="absolute inset-0 bento-noise opacity-10 pointer-events-none"
            >
            </div>

            <div class="grid md:grid-cols-3 gap-12 relative z-10">
                <!-- Column 1: Header & Bio (Span 2) -->
                <div class="md:col-span-2 flex flex-col gap-6">
                    <div class="flex items-center gap-4 mb-2">
                        <h2
                            class="text-3xl md:text-4xl font-heading font-bold text-white tracking-tight"
                        >
                            {t("nav.about")}
                            <span class="text-[#c08b5a]">.</span>
                        </h2>
                        <div class="h-px bg-white/10 flex-grow rounded-full">
                        </div>
                    </div>

                    <div
                        class="prose prose-invert prose-lg text-[#94a3b8] leading-relaxed"
                    >
                        <p set:html={t("about.p1")} />
                        <p set:html={t("about.p2")} />
                    </div>

                    <!-- Signature / decorative element -->
                    <div
                        class="mt-4 opacity-50 font-mono text-xs tracking-widest text-[#c08b5a]"
                    >
                        // ARCHITECTING_THE_FUTURE
                    </div>
                </div>

                <!-- Column 2: Tech DNA / Visual Sidebar -->
                <div
                    class="md:col-span-1 border-t md:border-t-0 md:border-l border-white/10 pt-8 md:pt-0 md:pl-12 flex flex-col justify-center"
                >
                    <h3
                        class="text-sm font-bold text-[#818d90] uppercase tracking-widest mb-6 flex items-center gap-2"
                    >
                        <span class="w-2 h-2 rounded-full bg-[#c08b5a]"></span>
                        Focus Areas
                    </h3>

                    <div class="flex flex-col gap-4">
                        <!-- Item 1 -->
                        <div
                            class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                        >
                            <div class="flex items-center gap-3 mb-1">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5 text-[#c08b5a]"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 01-2 2v4a2 2 0 012 2h14a2 2 0 012-2v-4a2 2 0 01-2-2m-2-4h.01M17 16h.01"
                                    ></path>
                                </svg>
                                <span class="font-bold text-gray-200"
                                    >Architecture & Backend</span
                                >
                            </div>
                            <p class="text-xs text-gray-500 pl-8">
                                Microservices & APIs
                            </p>
                        </div>

                        <!-- Item 2 -->
                        <div
                            class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                        >
                            <div class="flex items-center gap-3 mb-1">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5 text-[#c08b5a]"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                    ></path>
                                </svg>
                                <span class="font-bold text-gray-200"
                                    >Cloud & DevOps</span
                                >
                            </div>
                            <p class="text-xs text-gray-500 pl-8">
                                AWS & Scalability
                            </p>
                        </div>

                        <!-- Item 3 -->
                        <div
                            class="group p-4 rounded-xl bg-white/5 border border-white/5 hover:border-[#c08b5a]/30 transition-all hover:-translate-x-1"
                        >
                            <div class="flex items-center gap-3 mb-1">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5 text-[#c08b5a]"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                                    ></path>
                                </svg>
                                <span class="font-bold text-gray-200"
                                    >Data Science</span
                                >
                            </div>
                            <p class="text-xs text-gray-500 pl-8">
                                Analysis & Insights
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
