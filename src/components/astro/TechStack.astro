---
import { SKILLS } from "../../utils/skills";

// Desired order for display
const categories = [
    "Backend",
    "Frontend",
    "Cloud",
    "Data Science",
    "DevOps",
    "Database",
];
---

<div class="grid gap-8">
    {
        categories.map((category) => {
            const techByCategory = SKILLS.filter(
                (t) => t.category === category,
            );
            if (techByCategory.length === 0) return null;

            return (
                <div class="space-y-4">
                    <h3 class="text-xl font-heading font-bold text-gray-300 border-b border-white/5 pb-2">
                        {category}
                    </h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {techByCategory.map((tech) => (
                            <div class="flex items-center gap-3 p-4 rounded-lg bg-charcoal/50 backdrop-blur-sm border border-white/5 hover:border-gold/40 hover:bg-charcoal transition-all group hover:shadow-[0_0_15px_rgba(192,139,90,0.25)] hover:-translate-y-0.5">
                                <span class="text-2xl grayscale group-hover:grayscale-0 transition-all filter">
                                    {tech.emoji === "whale" ? "üê≥" : tech.emoji}
                                </span>
                                <span class="font-medium text-gray-300 group-hover:text-light transition-colors">
                                    {tech.name}
                                </span>
                            </div>
                        ))}
                    </div>
                </div>
            );
        })
    }
</div>
