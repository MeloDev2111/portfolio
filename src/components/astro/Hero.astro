---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
    ui,
} from "../../i18n/utils";
import { siteConfig } from "../../site.config";
import { getCVDetails } from "../../utils/cv";
import { getBentoSkills } from "../../utils/skills";
import { getPrimarySocials, getSecondarySocials } from "../../utils/social";
import { EXPERIENCE } from "../../utils/experience";
import Logo from "./Logo.astro";
import { publicFileExists } from "../../utils/files";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { url: cvUrl, filename: cvFilename } = getCVDetails(lang);

// Data Fetching: Latest Certification
const allCerts = await getCollection("certifications");
const latestCert = allCerts
    .filter((c) => c.data.starred)
    .sort(
        (a, b) =>
            new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
    )
    .at(0);

// Official Logos for the Bento (Centralized)
const techLogos = getBentoSkills().map((skill) => ({
    label: skill.name,
    src: skill.icon,
    color: skill.featured?.colorClass || "",
    border: skill.featured?.borderClass || "",
}));
---

<section
    id="hero"
    class="relative min-h-[90vh] flex items-center justify-center overflow-hidden py-20 lg:py-0 snap-start"
>
    <!-- Background: Subtle Grid & Deep Base -->
    <div class="absolute inset-0 bg-[#0c111c] -z-20"></div>
    <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#818d9010_1px,transparent_1px),linear-gradient(to_bottom,#818d9010_1px,transparent_1px)] bg-[size:40px_40px] -z-10 masking-gradient"
    >
    </div>

    <style>
        .masking-gradient {
            mask-image: radial-gradient(
                circle at center,
                black 40%,
                transparent 100%
            );
            -webkit-mask-image: radial-gradient(
                circle at center,
                black 40%,
                transparent 100%
            );
        }
    </style>

    <div
        class="max-w-6xl w-full mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-[#e1e1e0]"
    >
        <div
            class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[minmax(180px,auto)]"
        >
            <!-- 1. Main Identity Card -->
            <div
                class="md:col-span-2 md:row-span-2 rounded-2xl glass-card p-8 flex flex-col justify-between relative group hover:border-[#c08b5a]/40 transition-all duration-500 overflow-hidden min-h-[320px]"
            >
                <!-- Subtle Noise Overly -->
                <div
                    class="absolute inset-0 bento-noise pointer-events-none opacity-30"
                >
                </div>

                <!-- Hover Gradient -->
                <div
                    class="absolute inset-0 bg-gradient-to-tr from-[#c08b5a]/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
                >
                </div>

                <!-- Decorative Blob -->
                <div
                    class="absolute -top-20 -right-20 w-64 h-64 bg-[#c08b5a]/10 rounded-full blur-3xl pointer-events-none group-hover:bg-[#c08b5a]/20 transition-all duration-700"
                >
                </div>

                <div class="relative z-10 pt-4">
                    <span
                        class="text-[#f59e0b] font-mono text-base mb-2 block tracking-widest font-bold"
                    >
                        {t("hero.greeting") || "Hi, I'm"}
                    </span>
                    <h1
                        class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight leading-tight"
                    >
                        {siteConfig.name}
                    </h1>
                    <p
                        class="text-[#94a3b8] text-lg sm:text-xl max-w-lg leading-relaxed font-light"
                    >
                        {t("hero.description") || ui.en["hero.description"]}
                    </p>
                </div>

                <div class="mt-8 flex flex-wrap gap-4 relative z-10">
                    <a
                        href={cvUrl}
                        download={cvFilename}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 px-8 py-3.5 rounded-xl bg-[#f59e0b] text-[#0f172a] font-bold hover:bg-[#eab308] transition-all hover:scale-[1.02] active:scale-[0.98] shadow-lg shadow-orange-500/20"
                    >
                        <span>{t("hero.cta") || ui.en["hero.cta"]}</span>
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            stroke-width="2.5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                            ></path>
                        </svg>
                    </a>
                    <a
                        target="_blank"
                        rel="noopener noreferrer"
                        href={getPrimarySocials().find(
                            (s) => s.name === "LinkedIn",
                        )?.url}
                        class="flex items-center gap-2 px-8 py-3.5 rounded-xl border border-white/10 text-white hover:bg-white/5 hover:border-white/20 transition-all font-medium backdrop-blur-sm"
                    >
                        <span>{t("nav.contact")}</span>
                    </a>
                </div>
            </div>

            <!-- 2. Main Socials (Compact Stack) -->
            <div
                class="md:col-span-1 md:row-span-1 rounded-2xl glass-card p-5 flex flex-col gap-3 justify-center hover:border-[#c08b5a]/30 transition-all group overflow-hidden"
            >
                <div
                    class="absolute inset-0 bento-noise pointer-events-none opacity-20"
                >
                </div>
                {
                    getPrimarySocials().map((social) => (
                        <a
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-3 p-2.5 rounded-xl bg-white/5 hover:bg-white/10 border border-white/5 hover:border-[#c08b5a]/20 transition-all group/link relative overflow-hidden"
                        >
                            <span
                                class="w-8 h-8 flex items-center justify-center rounded-lg bg-[#0f172a] text-white p-1.5 group-hover/link:scale-110 transition-transform"
                                set:html={social.icon}
                            />

                            <div class="flex flex-col">
                                <span class="text-xs font-bold text-white group-hover/link:text-[#f59e0b] transition-colors leading-tight">
                                    {social.name}
                                </span>
                                <span class="text-[10px] text-[#818d90] font-medium leading-tight">
                                    {social.label}
                                </span>
                            </div>
                            <div class="absolute right-2 text-[#818d90] opacity-0 group-hover/link:opacity-100 transition-opacity">
                                <svg
                                    class="w-3 h-3"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M7 17L17 7M17 7H7M17 7V17"
                                    />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>

            <!-- 3. Latest Certification (Dynamic) -->
            {
                latestCert && (
                    <a
                        href="#certifications"
                        class="md:col-span-1 md:row-span-1 rounded-2xl glass-card p-5 flex flex-col items-center justify-between relative overflow-hidden group hover:border-[#c08b5a]/40 transition-all duration-500 cursor-pointer"
                    >
                        <div class="absolute inset-0 bento-noise pointer-events-none opacity-20" />
                        <div class="absolute inset-0 opacity-0 pointer-events-none group-hover:opacity-20 transition-opacity duration-700 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#c08b5a] via-transparent to-transparent" />

                        <div class="relative z-10 w-full flex flex-col items-center h-full">
                            <p class="text-[10px] text-[#f59e0b] font-heading mb-2 text-center uppercase tracking-widest font-bold animate-pulse">
                                {t("hero.latestAchievement")}
                            </p>

                            <div class="flex-grow flex items-center justify-center py-2">
                                {latestCert.data.badge ? (
                                    <div class="w-16 h-16 relative filter drop-shadow-[0_0_15px_rgba(192,139,90,0.2)] group-hover:drop-shadow-[0_0_20px_rgba(192,139,90,0.4)] group-hover:scale-110 transition-all duration-500 ease-out">
                                        <Image
                                            src={
                                                latestCert.data.badge.startsWith(
                                                    "http",
                                                )
                                                    ? latestCert.data.badge
                                                    : import.meta.env.BASE_URL.replace(
                                                          /\/$/,
                                                          "",
                                                      ) + latestCert.data.badge
                                            }
                                            alt={latestCert.data.name}
                                            width={64}
                                            height={64}
                                            class="w-full h-full object-contain"
                                            loading="eager"
                                        />
                                    </div>
                                ) : (
                                    <span class="text-4xl group-hover:scale-110 transition-transform duration-500">
                                        üèÜ
                                    </span>
                                )}
                            </div>

                            <div class="text-center mt-2 transform group-hover:-translate-y-1 transition-transform duration-500">
                                <h3 class="text-xs font-heading font-bold text-white leading-tight group-hover:text-[#c08b5a] transition-colors duration-300 line-clamp-2">
                                    {latestCert.data.name}
                                </h3>
                                <p class="text-[10px] text-[#818d90] mt-1 group-hover:text-[#94a3b8] transition-colors duration-300">
                                    {latestCert.data.date}
                                </p>
                            </div>
                        </div>

                        {/* Arrow Indicator */}
                        <div class="absolute top-3 right-3 text-[#c08b5a] opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500 delay-100">
                            <svg
                                class="w-3 h-3"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"
                                />
                            </svg>
                        </div>
                    </a>
                )
            }

            <!-- 4. Current Role -->
            <!-- 4. Experience / Timeline Card (Dynamic) -->
            <a
                href="#experience"
                class="md:col-span-1 md:row-span-1 rounded-2xl glass-card p-5 flex flex-col justify-between hover:border-[#c08b5a]/40 transition-all group overflow-hidden relative"
            >
                <div
                    class="absolute inset-0 bento-noise pointer-events-none opacity-10"
                >
                </div>

                <div
                    class="flex items-center justify-between mb-2 relative z-10"
                >
                    <p
                        class="text-[10px] text-[#818d90] font-mono uppercase tracking-widest font-medium"
                    >
                        {t("nav.experience")}
                    </p>
                    <div class="flex items-center gap-2">
                        <span class="relative flex h-2 w-2">
                            <span
                                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#f59e0b] opacity-75"
                            ></span>
                            <span
                                class="relative inline-flex rounded-full h-2 w-2 bg-[#f59e0b]"
                            ></span>
                        </span>
                    </div>
                </div>

                <div
                    class="relative z-10 flex-grow flex flex-col gap-3 justify-center"
                >
                    {
                        EXPERIENCE.slice(0, 2).map((job) => (
                            <div
                                class={`flex items-center gap-3 ${!job.current ? "opacity-60 group-hover:opacity-100 transition-opacity duration-300" : ""}`}
                            >
                                <div
                                    class={`w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 border border-white/5 shadow-sm ${job.current ? "bg-white/5 border-white/10" : "bg-white/5"}`}
                                >
                                    {publicFileExists(job.logo) ? (
                                        <img
                                            src={job.logo}
                                            alt={job.company}
                                            class="w-full h-full object-contain p-1.5"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center bg-white/5 border border-white/10 rounded-lg text-[#c08b5a] font-bold text-sm">
                                            {job.company.charAt(0)}
                                        </div>
                                    )}
                                </div>
                                <div>
                                    <h4
                                        class={`text-sm font-bold leading-none ${job.current ? "text-gray-200 group-hover:text-[#c08b5a] transition-colors" : "text-gray-400 font-medium"}`}
                                    >
                                        {job.role
                                            .replace("Developer", "")
                                            .trim()}
                                    </h4>
                                    <p class="text-[10px] text-[#818d90] mt-1 font-mono">
                                        {job.startDate} -{" "}
                                        {job.current
                                            ? t("ui.current")
                                            : job.endDate}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div
                    class="relative z-10 mt-2 flex justify-end border-t border-white/5 pt-2"
                >
                    <span
                        class="text-[10px] text-[#c08b5a] group-hover:text-white transition-colors flex items-center gap-1 font-medium"
                    >
                        {t("section.viewFullExperience")}
                        <span
                            class="group-hover:translate-x-1 transition-transform"
                            >-></span
                        >
                    </span>
                </div>
            </a>

            <!-- 5. Tech Stack (Compact Grid) -->
            <div
                class="md:col-span-1 md:row-span-1 rounded-2xl glass-card p-5 flex flex-col hover:border-[#c08b5a]/30 transition-all group overflow-hidden relative"
            >
                <div
                    class="absolute inset-0 bento-noise pointer-events-none opacity-10"
                >
                </div>

                <div
                    class="flex items-center justify-between mb-4 relative z-10"
                >
                    <p
                        class="text-[10px] text-[#818d90] font-mono uppercase tracking-widest font-medium"
                    >
                        {t("nav.tech") || "Tech Stack"}
                    </p>
                    <a
                        href={getRelativeLocaleUrl(lang, "/tech-stack")}
                        class="text-[10px] text-[#c08b5a] hover:text-white transition-colors opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300"
                    >
                        {t("section.viewFullTech")?.split(" ")[0] || "View"} ->
                    </a>
                </div>

                <div class="grid grid-cols-4 gap-3 relative z-10 content-start">
                    {
                        (() => {
                            const MAX_ICONS = 8;
                            const displayedSkills = techLogos.slice(
                                0,
                                MAX_ICONS - 1,
                            ); // Save 1 slot for "More" button
                            const remaining =
                                techLogos.length - displayedSkills.length;

                            return (
                                <>
                                    {displayedSkills.map((tech) => (
                                        <div
                                            class={`group/icon relative w-full aspect-square flex items-center justify-center p-2 rounded-lg border border-white/5 bg-white/5 ${tech.border} ${tech.color} hover:scale-105 transition-transform cursor-default`}
                                        >
                                            {/* Direct Img for sharp SVG rendering - NOW OPTIMIZED via Astro Image 
                                                Note: remotePatterns must be configured for cdn.jsdelivr.net in astro.config.mjs
                                            */}
                                            <Image
                                                src={tech.src}
                                                alt={tech.label}
                                                width={64}
                                                height={64}
                                                class="w-full h-full object-contain filter grayscale opacity-80 brightness-125 group-hover/icon:grayscale-0 group-hover/icon:opacity-100 group-hover/icon:brightness-100 transition-all duration-300"
                                            />

                                            {/* Dynamic Tooltip */}
                                            <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-[#1a1f2e] text-gray-200 text-[10px] font-bold px-2 py-1 rounded-md opacity-0 group-hover/icon:opacity-100 transform translate-y-2 group-hover/icon:translate-y-0 transition-all duration-200 pointer-events-none whitespace-nowrap border border-white/10 shadow-xl z-20">
                                                {tech.label}
                                                <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-[#1a1f2e] border-r border-b border-white/10 rotate-45" />
                                            </div>
                                        </div>
                                    ))}

                                    {/* View All Link/Button */}
                                    <a
                                        href={getRelativeLocaleUrl(
                                            lang,
                                            "/tech-stack",
                                        )}
                                        class="group/more relative w-full aspect-square flex items-center justify-center rounded-lg border border-white/5 bg-white/5 group-hover:bg-white/10 group-hover:border-[#c08b5a]/30 hover:!bg-[#c08b5a]/20 hover:!border-[#c08b5a] transition-all cursor-pointer"
                                    >
                                        <span class="text-xs font-bold text-gray-500 group-hover:text-gray-300 group-hover/more:text-[#c08b5a] transition-colors">
                                            +{remaining}
                                        </span>

                                        {/* Dynamic Tooltip for +N */}
                                        <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-[#1a1f2e] text-gray-200 text-[10px] font-bold px-2 py-1 rounded-md opacity-0 group-hover/more:opacity-100 transform translate-y-2 group-hover/more:translate-y-0 transition-all duration-200 pointer-events-none whitespace-nowrap border border-white/10 shadow-xl z-20">
                                            {t("ui.more") || "View All"}
                                            <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-[#1a1f2e] border-r border-b border-white/10 rotate-45" />
                                        </div>
                                    </a>
                                </>
                            );
                        })()
                    }
                </div>
            </div>
        </div>
    </div>
</section>
