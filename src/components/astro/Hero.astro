---
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
    ui,
} from "../../i18n/utils";
import { siteConfig } from "../../site.config";
import { getCVDetails } from "../../utils/cv";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { url: cvUrl, filename: cvFilename } = getCVDetails(lang);
---

<section
    class="relative min-h-[80vh] flex items-center justify-center overflow-hidden"
>
    <!-- Background Glow -->
    <!-- Background Glow -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-gold/10 rounded-full blur-[100px] -z-10 animate-pulse-slow"
    >
    </div>
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-gold/5 rounded-full blur-[80px] -z-10"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <span
            class="inline-block py-1 px-3 rounded-full bg-white/5 border border-white/10 text-sm text-gold mb-6 font-medium"
        >
            {siteConfig.title}
        </span>

        <p class="text-xl md:text-2xl text-gray-400 mb-4 font-light">
            {t("hero.greeting")}
            <span class="text-light font-bold">{siteConfig.name}</span>
        </p>

        <h1
            class="text-5xl md:text-7xl font-heading font-bold text-light tracking-tight mb-6"
        >
            Building Robust <br />
            <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-gold to-white"
                >Digital Ecosystems</span
            >
        </h1>

        <p
            class="text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed"
        >
            {t("hero.description") || ui.en["hero.description"]}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
                href={cvUrl}
                download={cvFilename}
                target="_blank"
                rel="noopener noreferrer"
                class="px-8 py-3 rounded-lg bg-gold text-gunmetal font-bold hover:bg-yellow-400 transition-colors shadow-[0_0_20px_rgba(244,208,63,0.3)]"
            >
                {t("hero.cta") || ui.en["hero.cta"]}
            </a>
            <a
                href={getRelativeLocaleUrl(lang, "/#projects")}
                class="px-8 py-3 rounded-lg border border-white/20 text-light font-medium hover:bg-white/5 transition-colors"
            >
                {t("hero.viewProjects")}
            </a>
        </div>
    </div>
</section>
